}

@section left_btm{
    <div class="card">
        <div class="card-header">
            <h3>연/월차 입력</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="usr">이름</label>
                <input type="text" class="form-control" id="userName" value="test" />
            </div>

            <div class="form-group">
                <label for="usr1">입력1</label>
                <input type="text" class="form-control" id="input1" value=@ViewBag.id />
            </div>

            <div class="form-group">
                <label for="usr2">입력2</label>
                <input type="text" class="form-control" id="input2" value="@ViewBag.pw" />
            </div>

            <div class="form-group">
                <label for="usr3">날짜</label> <br />
                <div class="input-group date">
                    <input type="text" class="form-control" placeholder="클릭 후 날짜 선택(1주 단위)">
                    <span class="input-group-addon"><span class="fade fa-calendar"></span></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
                <input type="submit" value="Cancel" class="btn btn-danger" />
            </div>
        </div>
    </div>

        <script>
            $('.input-group.date').datepicker({
                format: 'yyyy-mm-dd',
                language: 'ko',
                clearBtn: true,
                autoclose: true,
                todayHighlight: true

            });
        </script>
}


@section right{

    @{string temp; }

    @{
        temp = String.IsNullOrEmpty(ViewBag.id) ? "." : ViewBag.id;
    }
        <div class="card">
            <div class="card-header">
                <h3><font>연/월차 사용현황</font></h3>
            </div>
            
            @*<form method="post" action="">
