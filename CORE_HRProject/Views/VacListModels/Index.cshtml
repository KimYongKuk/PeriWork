@section left{
    <div class="card">
        <div class="card-header">
            <h3><font>휴가수령정보</font></h3>
        </div>
        <div class="card-body">
            <table class="table table-active">
                <thead>
                    <tr>
                        <th>발생수량</th>
                        <th>사용수량</th>
                        <th>잔존수량</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>1건</td>
                        <td>1건</td>
                        <td>1건</td>
                    </tr>
                </tbody>
            </table>
        </div>
